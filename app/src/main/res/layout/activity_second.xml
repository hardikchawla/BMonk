    <TextView
        android:id="@+id/dndText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/super_m"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/dndText2"
        app:layout_constraintLeft_toLeftOf="@id/dndText2"
        app:layout_constraintRight_toRightOf="@id/dndText2"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/dndText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode_s"
