    <TextView
        android:id="@+id/progressTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_40"
        android:paddingBottom="1dp"
        android:textSize="22sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        android:layout_marginStart="20dp"
        android:paddingEnd="5dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginLeft="20dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_left"
        android:paddingBottom="1dp"
        android:paddingEnd="1dp"
        android:textSize="14sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/progressTimeLeft"
        app:layout_constraintTop_toTopOf="@id/progressTimeLeft"
        app:layout_constraintBottom_toBottomOf="@id/progressTimeLeft"
        tools:ignore="RtlSymmetry"
        android:paddingRight="1dp" />

    <ImageButton
        android:id="@+id/statsButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="dndButton"
        app:srcCompat="@drawable/flower_button"
        tools:ignore="ContentDescription,OnClick,RtlHardcoded" />

    <ImageButton
