    <TextView
        android:id="@+id/currentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_level"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/montserratbold"
        android:textColor="#0BA49A"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/AspiringMonk"
        android:paddingHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/currentLevel"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/distracted_baby"
        android:textColor="#FFFFFF"
        android:background="#0CBFB4"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="currentLevelButton" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="190dp"
        android:layout_height="167dp"
        app:layout_constraintTop_toBottomOf="@id/AspiringMonk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="73dp"
        app:srcCompat="@drawable/image1"
        android:onClick="startButton"
        tools:ignore="ContentDescription,OnClick" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/digital7"
        android:text="@string/_00_00"
        android:gravity="center"
        android:textColor="#085B56"
        android:textSize="110sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AspiringMonk"
        />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="#0CBFB4"
        android:fontFamily="@font/lilitaone"
        android:onClick="stopButton"
        android:text="@string/pause"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cancelButton"
        app:layout_constraintTop_toBottomOf="@id/timer"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="#0CBFB4"
        android:fontFamily="@font/lilitaone"
        android:onClick="cancelButton"
        android:text="@string/stop"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/stopButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="@string/focus_time_running"
        android:textColor="#0BA49A"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        />

    <TextView
        android:id="@+id/levelUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/level_up_in"
        android:textColor="#085B56"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        android:layout_marginEnd="253dp"
        android:layout_marginRight="253dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="145dp"
        android:scaleY="8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:progress="20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelUp"
        app:layout_constraintVertical_bias="0.0"
        android:theme="@style/ProgressBarColour"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="230dp" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="27.5dp"
        android:layout_height="27.5dp"
        android:layout_marginBottom="146.75dp"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelUp"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/watch"
        tools:ignore="ContentDescription"
        android:layout_marginStart="2.75dp"
        android:layout_marginEnd="199.75dp"
        android:layout_marginRight="199.75dp"
        android:layout_marginLeft="2.75dp" />

